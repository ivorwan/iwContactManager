@{
    ViewBag.Title = "Chat";
}
@section header
    {
    <style type="text/css">
        #chat {
            background-color: #99CCFF;
            border: thick solid #808080;
            padding: 20px;
            margin: 20px;
        }
    </style>
}

<h2>Chat</h2>
<div ng-controller="ChatController as chatCtrl" ng-app="iwContactManager">
    <form name="nameForm" ng-submit="nameForm.$valid && submitName()" ng-hide="nameIsSet" novalidate>
        Enter your screen name:
        <input type="text" name="name" ng-model="name" required ng-minlength="2" class="form-control" /><br />
        <input type="submit" value="Submit" class="btn" />
    </form>
    
    

    

    <div class="form-horizontal" ng-show="nameIsSet" ng-cloak>
        <div class="form-control">
            Your screen name: <span ng-cloak>{{name}}</span>
        </div>
        
        <div class="container" id="chat">
            <form name="messageForm" ng-submit="messageForm.$valid && sendMessage()" novalidate>
                <div class="form-group">
                    <input type="text" id="message" ng-model="message" required class="form-control" />
                </div>
                
                <input type="submit" id="sendmessage" value="Send" class="btn" />
            </form>
            
            <ul id="discussion" ng-repeat="msg in discussion">
                <li ng-cloak>{{msg.name}} : {{msg.message}}</li>
            </ul>
        </div>
    </div>

</div>


